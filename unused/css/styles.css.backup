/* This file is kept as a backup of the original styles.css.
   All styles have been moved to separate CSS files in the css/ directory. */

:root {
    --color-bg: #0f0f0f;
    --color-bg-light: #1a1a1a;
    --color-text: #ffffff;
    --color-text-secondary: rgba(255, 255, 255, 0.7);
    --color-accent: #64ffda;
    --color-accent-secondary: rgba(100, 255, 218, 0.2);
    --font-heading: 'Syncopate', sans-serif;
    --font-body: 'Space Grotesk', sans-serif;
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 3rem;
    --spacing-xl: 5rem;
    --border-radius: 4px;
    --transition-standard: all 0.3s ease;
    --box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.7);
    --box-shadow-hover: 0 20px 30px -15px rgba(0, 0, 0, 0.8);
    --container-width-sm: 90%;
    --container-width-md: 85%;
    --container-width-lg: 80%;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    user-select: none;
}

html {
    scroll-behavior: smooth;
}

html, body {
    margin: 0;
    padding: 0;
    background: var(--color-bg);
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.5;
    height: 100%;
    width: 100%;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    cursor: default;
    opacity: 0;
    transition: opacity 0.5s ease;
}

body.loaded {
    opacity: 1;
}

main {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
}

section {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    min-height: 100vh;
    padding: 5% 5%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
}

.section-header {
    position: relative;
    width: 100%;
    max-width: var(--container-width-lg);
    margin: 0 auto var(--spacing-lg);
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.section-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: 1px;
    position: relative;
    display: inline-block;
    text-align: left;
    z-index: 2;
    margin: 0;
    padding: 0;
}

.section-title::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -10px;
    width: 60px;
    height: 3px;
    background-color: var(--color-accent);
    transition: width 0.3s ease;
}

.section-title:hover::after {
    width: 100%;
}

.section-number {
    position: fixed;
    right: 10%;
    top: 15vh;
    text-align: right;
    z-index: 1;
    font-size: clamp(3rem, 8vw, 4rem);
    opacity: 0.3;
    pointer-events: none;
    margin: 0;
    padding: 0;
    line-height: 1;
    width: auto;
}

.menu-toggle {
    display: flex;
    position: fixed;
    top: var(--spacing-md);
    right: var(--spacing-md);
    width: 50px;
    height: 50px;
    background: rgba(15, 15, 15, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    cursor: pointer;
    z-index: 1000;
    align-items: center;
    justify-content: center;
    transition: var(--transition-standard);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.menu-toggle:hover {
    background: rgba(100, 255, 218, 0.1);
    border-color: var(--color-accent);
    transform: scale(1.05);
}

.menu-toggle__lines {
    width: 24px;
    height: 18px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.menu-toggle__lines span {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--color-text);
    transition: var(--transition-standard);
    transform-origin: center;
}

.menu-toggle.active {
    background: rgba(100, 255, 218, 0.1);
    border-color: var(--color-accent);
}

.menu-toggle.active .menu-toggle__lines span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
}

.menu-toggle.active .menu-toggle__lines span:nth-child(2) {
    opacity: 0;
}

.menu-toggle.active .menu-toggle__lines span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
}

.main-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(15, 15, 15, 0.98);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    display: flex;
    justify-content: center;
    align-items: center;
}

.main-nav.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
}

.nav-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
}

.nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    pointer-events: auto;
}

.nav-item {
    margin: 0;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: auto;
}

.main-nav.active .nav-item {
    opacity: 1;
    transform: translateY(0);
}

.nav-item:nth-child(1) { transition-delay: 0.1s; }
.nav-item:nth-child(2) { transition-delay: 0.2s; }
.nav-item:nth-child(3) { transition-delay: 0.3s; }
.nav-item:nth-child(4) { transition-delay: 0.4s; }

.nav-item a {
    font-family: var(--font-heading);
    font-size: 2rem;
    color: var(--color-text);
    text-decoration: none;
    transition: var(--transition-standard);
    position: relative;
    display: inline-block;
}

.nav-item a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-accent);
    transition: width 0.3s ease;
}

.nav-item a:hover {
    color: var(--color-accent);
}

.nav-item a:hover::after {
    width: 100%;
}

.nav-footer {
    position: absolute;
    bottom: 2rem;
    left: 0;
    width: 100%;
    text-align: center;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s ease;
    transition-delay: 0.5s;
}

.main-nav.active .nav-footer {
    opacity: 1;
    transform: translateY(0);
}

.social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
}

.social-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.9rem;
    opacity: 0.6;
    transition: all 0.3s ease;
}

.social-links a:hover {
    opacity: 1;
    color: var(--color-accent);
}

section.section {
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), visibility 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: opacity, visibility;
}

section.section.active {
    opacity: 1;
    visibility: visible;
}

#about.about {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0;
    height: 100vh;
}

.about-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 5rem;
    height: auto;
    padding: 0;
    max-width: var(--container-width-lg);
    margin: 0 auto;
    position: relative;
    transform: translateZ(0);
    will-change: transform;
}

.about-text {
    text-align: left;
    width: 60%;
}

.about-visual {
    width: 40%;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transform: translateZ(0);
    will-change: transform;
    backface-visibility: hidden;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--box-shadow);
    transition: var(--transition-standard);
}

.about-visual:hover {
    box-shadow: var(--box-shadow-hover);
    transform: translateY(-5px);
}

#lottie-container {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: translateZ(0);
    will-change: transform;
    backface-visibility: hidden;
}

.large-text {
    text-align: left;
    font-size: clamp(1.8rem, 3vw, 2.5rem);
    line-height: 1.3;
    margin-bottom: var(--spacing-md);
    font-weight: 600;
}

.about-description {
    margin-bottom: var(--spacing-lg);
}

.about-description p {
    text-align: left;
    margin-bottom: var(--spacing-sm);
    opacity: 0.8;
    font-size: 1.05rem;
    line-height: 1.6;
}

.skills-container {
    display: flex;
    gap: var(--spacing-lg);
}

.skill-category {
    width: 50%;
    text-align: left;
}

.skill-category h4 {
    margin-bottom: var(--spacing-sm);
    font-family: var(--font-heading);
    font-size: 1rem;
    letter-spacing: 1px;
    text-align: left;
    position: relative;
    display: inline-block;
    padding-bottom: 8px;
}

.skill-category h4::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 30px;
    height: 2px;
    background-color: var(--color-accent);
}

.skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    justify-content: flex-start;
}

.skill-list span {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    font-size: 0.9rem;
    transition: var(--transition-standard);
    border: 1px solid transparent;
    transform: translateZ(0);
    will-change: transform;
    position: relative;
    overflow: hidden;
}

.skill-list span:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
    border-color: var(--color-accent-secondary);
}

.skill-list span::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.7s ease;
}

.skill-list span:hover::before {
    left: 100%;
}

#contact.contact {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0;
    height: 100vh;
}

.contact-content {
    display: flex;
    justify-content: space-between;
    gap: 5rem;
    height: auto;
    padding: 0;
    max-width: var(--container-width-lg);
    margin: 0 auto;
    position: relative;
    transform: translateZ(0);
    will-change: transform;
}

.contact-text {
    text-align: left;
    width: 40%;
}

.contact-form {
    width: 60%;
}

.contact-heading {
    text-align: left;
    font-size: clamp(1.8rem, 3vw, 2.5rem);
    line-height: 1.3;
    margin-bottom: var(--spacing-lg);
    font-weight: 600;
}

.contact-links {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    text-align: left;
}

.contact-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-sm) 0;
    text-decoration: none;
    color: var(--color-text);
    transition: var(--transition-standard);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transform: translateZ(0);
    will-change: transform;
    position: relative;
    overflow: hidden;
}

.contact-link:hover, 
.contact-link:active, 
.contact-link:visited {
    text-decoration: none;
    border-color: var(--color-accent);
    transform: translateX(10px);
    color: var(--color-accent);
}

.contact-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: var(--color-accent);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
}

.contact-link:hover::before {
    transform: scaleX(1);
    transform-origin: left;
}

.link-label {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    opacity: 0.6;
}

.link-text {
    font-size: 1.2rem;
    font-weight: 500;
    text-decoration: none;
}

.link-text:hover, 
.link-text:active, 
.link-text:visited {
    text-decoration: none;
}

.form-group {
    position: relative;
    margin-bottom: var(--spacing-lg);
}

.form-group input,
.form-group textarea {
    width: 100%;
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding: var(--spacing-sm);
    color: var(--color-text);
    font-size: 1rem;
    font-family: var(--font-body);
    transition: var(--transition-standard);
    background-color: rgba(255, 255, 255, 0.02);
    border-radius: var(--border-radius) var(--border-radius) 0 0;
}

.form-group textarea {
    min-height: 150px;
    resize: vertical;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    background-color: rgba(255, 255, 255, 0.05);
}

.form-group label {
    position: absolute;
    top: var(--spacing-sm);
    left: 0;
    font-size: 0.9rem;
    transition: var(--transition-standard);
    pointer-events: none;
    opacity: 0.7;
}

.form-group input:focus ~ label,
.form-group textarea:focus ~ label,
.form-group input:valid ~ label,
.form-group textarea:valid ~ label {
    top: -0.5rem;
    font-size: 0.8rem;
    color: var(--color-accent);
    opacity: 1;
}

.form-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-accent);
    transition: var(--transition-standard);
}

.form-group input:focus ~ .form-line,
.form-group textarea:focus ~ .form-line {
    width: 100%;
}

.submit-btn {
    background: transparent;
    border: 1px solid var(--color-text);
    color: var(--color-text);
    padding: var(--spacing-sm) var(--spacing-md);
    font-family: var(--font-heading);
    font-size: 0.9rem;
    letter-spacing: 1px;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: var(--transition-standard);
    border-radius: var(--border-radius);
    transform: translateZ(0);
    will-change: transform, box-shadow;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.submit-btn:hover {
    background: rgba(100, 255, 218, 0.1);
    border-color: var(--color-accent);
    color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 7px 10px rgba(0, 0, 0, 0.3);
}

.btn-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--color-accent);
    transform: translateX(-100%);
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: -1;
    opacity: 0.1;
}

.submit-btn:hover .btn-overlay {
    transform: translateX(0);
}
.hero {
    position: relative;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    overflow: hidden;
    padding: 0 5%;
}

#hero-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 2;
    text-align: left;
    width: 100%;
    max-width: var(--container-width-lg);
    margin: 0 auto;
    transform: translateZ(0);
    will-change: transform;
}

.hero-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 8vw, 4.5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 700;
}

.hero-title .line {
    display: block;
    margin-bottom: 0.5rem;
}

.hero-subtitle {
    font-size: clamp(0.9rem, 2vw, 1.2rem);
    opacity: 0.8;
    margin-bottom: 2.5rem;
    max-width: 500px;
}

.hero-footer {
    position: absolute;
    bottom: 2rem;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 5%;
    font-size: 0.9rem;
    opacity: 0.6;
    z-index: 2;
}

.scroll-indicator {
    position: absolute;
    bottom: 5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0.7;
    transition: opacity 0.3s ease;
}

.scroll-indicator:hover {
    opacity: 1;
}

.scroll-indicator span {
    font-size: 0.75rem;
    margin-bottom: 0.8rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 300;
}

.scroll-indicator .scroll-cube {
    position: relative;
    width: 30px;
    height: 30px;
    transform-style: preserve-3d;
    animation: rotateCube 8s infinite linear;
}

.scroll-cube-face {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 1px solid var(--color-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.7;
    backface-visibility: visible;
}

.scroll-cube-face:nth-child(1) {
    transform: translateZ(15px);
}

.scroll-cube-face:nth-child(2) {
    transform: rotateY(180deg) translateZ(15px);
}

.scroll-cube-face:nth-child(3) {
    transform: rotateY(90deg) translateZ(15px);
}

.scroll-cube-face:nth-child(4) {
    transform: rotateY(-90deg) translateZ(15px);
}

.scroll-cube-face:nth-child(5) {
    transform: rotateX(90deg) translateZ(15px);
}

.scroll-cube-face:nth-child(6) {
    transform: rotateX(-90deg) translateZ(15px);
}

.scroll-cube-face::after {
    content: '';
    position: absolute;
    width: 6px;
    height: 6px;
    background-color: var(--color-accent);
    border-radius: 50%;
    animation: pulseLight 2s infinite alternate;
}

@keyframes rotateCube {
    0% {
        transform: rotateX(0deg) rotateY(0deg);
    }
    25% {
        transform: rotateX(90deg) rotateY(90deg);
    }
    50% {
        transform: rotateX(180deg) rotateY(180deg);
    }
    75% {
        transform: rotateX(270deg) rotateY(270deg);
    }
    100% {
        transform: rotateX(360deg) rotateY(360deg);
    }
}

@keyframes pulseLight {
    0% {
        opacity: 0.3;
        box-shadow: 0 0 5px var(--color-accent);
    }
    100% {
        opacity: 1;
        box-shadow: 0 0 15px var(--color-accent), 0 0 30px var(--color-accent);
    }
}

@keyframes scrollDown {
    0% {
        transform: translateY(0);
        opacity: 1;
    }
    80% {
        transform: translateY(20px);
        opacity: 0;
    }
    100% {
        transform: translateY(0);
        opacity: 0;
    }
}

/* Mobile styles */
@media (max-width: 768px) {
    html {
        scroll-behavior: smooth;
        scroll-snap-type: none;
    }

    main {
        height: auto !important;
        overflow: visible !important;
    }
    
    section {
        position: relative !important;
        height: auto !important;
        min-height: 100vh !important;
        opacity: 1 !important;
        visibility: visible !important;
        padding: 4rem 5% !important;
        padding-top: max(4rem, env(safe-area-inset-top, 4rem));
        padding-bottom: max(2rem, env(safe-area-inset-bottom, 2rem));
        padding-left: max(1rem, env(safe-area-inset-left, 1rem));
        padding-right: max(1rem, env(safe-area-inset-right, 1rem));
        min-height: -webkit-fill-available;
    }

    #home.hero {
        display: flex !important;
        flex-direction: column !important;
        align-items: center !important;
        justify-content: center !important;
        text-align: center !important;
        height: 100vh !important;
        min-height: 100vh !important;
        padding: 0 !important;
        position: relative !important;
    }

    .hero-content {
        display: flex !important;
        flex-direction: column !important;
        align-items: center !important;
        justify-content: center !important;
        text-align: center !important;
        width: 90% !important;
        max-width: 100% !important;
        margin: 0 auto !important;
        padding: 0 !important;
        position: absolute !important;
        top: 50% !important;
        left: 50% !important;
        transform: translate(-50%, -50%) !important;
        z-index: 2 !important;
    }

    .hero-title {
        width: 100% !important;
        text-align: center !important;
        margin: 0 auto 1.5rem auto !important;
        display: block !important;
    }

    .hero-title .line {
        display: block !important;
        text-align: center !important;
        width: 100% !important;
        margin-bottom: 0.5rem !important;
    }

    .hero-subtitle {
        display: block !important;
        text-align: center !important;
        width: 100% !important;
        max-width: 100% !important;
        margin: 0 auto 2rem auto !important;
        padding: 0 1rem !important;
        font-size: clamp(0.9rem, 4vw, 1.1rem) !important;
    }

    .hero-footer {
        position: absolute !important;
        bottom: max(2rem, env(safe-area-inset-bottom, 2rem)) !important;
        left: 0 !important;
        width: 100% !important;
        padding: 0 1.5rem !important;
        display: flex !important;
        justify-content: space-between !important;
        font-size: 0.8rem !important;
        z-index: 2 !important;
    }

    .section-header {
        margin-bottom: 2.5rem;
        transform: none !important;
        text-align: center !important;
        justify-content: center !important;
        width: 100% !important;
    }

    .section-number {
        visibility: hidden !important;
    }
    
    #work .section-header {
        padding-top: 4rem;
    }

    #about.about {
        background: linear-gradient(180deg, #000000 0%, var(--color-bg) 70%) !important;
        padding-top: 4rem !important;
        padding-bottom: 4rem !important;
        text-align: center !important;
    }
    
    .about-content {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        align-items: center !important;
    }
    
    .about-text {
        width: 100%;
        transform: none !important;
        text-align: center !important;
    }
    
    .about .section-header {
        text-align: center !important;
        justify-content: center !important;
        margin-left: auto !important;
        margin-right: auto !important;
    }
    
    .about .section-title {
        text-align: center !important;
    }
    
    .about-visual {
        width: 100%;
        height: 300px;
        order: -1;
        transform: none !important;
        margin-bottom: 1rem;
        overflow: hidden;
        position: relative;
    }
    
    #lottie-container {
        width: 100%;
        height: 100%;
        position: relative;
        overflow: hidden;
    }
    
    .large-text {
        font-size: clamp(1.5rem, 4vw, 2rem);
        line-height: 1.3;
        margin-bottom: 1.5rem;
        margin-top: 1rem;
        text-align: center !important;
    }
    
    .about-description p {
        margin-bottom: 1rem;
        font-size: 1rem;
        text-align: center !important;
    }
    
    .skills-container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 2rem;
        transform: none !important;
        align-items: center !important;
    }
    
    .skill-category {
        width: 100%;
        text-align: center !important;
    }
    
    .skill-category h4 {
        text-align: center !important;
    }
    
    .skill-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
        justify-content: center !important;
    }
    
    .skill-list span {
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 4px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    #contact.contact {
        background: var(--color-bg);
        padding-top: 4rem !important;
        padding-bottom: 4rem !important;
        text-align: center !important;
    }
    
    .contact-content {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        align-items: center !important;
    }
    
    .contact-text {
        width: 100%;
        transform: none !important;
        text-align: center !important;
    }
    
    .contact .section-header {
        text-align: center !important;
        justify-content: center !important;
        margin-left: auto !important;
        margin-right: auto !important;
    }
    
    .contact .section-title {
        text-align: center !important;
    }
    
    .contact-heading {
        font-size: clamp(1.5rem, 4vw, 2rem);
        line-height: 1.3;
        margin-bottom: 2rem;
        text-align: center !important;
    }
    
    .contact-links {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 100% !important;
        max-width: 400px !important;
        margin: 0 auto !important;
    }
    
    .contact-link {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 0;
        text-decoration: none !important;
        color: var(--color-text);
        transition: all 0.3s ease;
    }
    
    .contact-link:hover,
    .contact-link:active {
        border-color: var(--color-accent);
    }
    
    .link-label {
        font-family: var(--font-heading);
        font-size: 0.9rem;
        opacity: 0.6;
    }
    
    .link-text {
        font-size: 1.1rem;
        text-decoration: none !important;
    }
    
    .contact-form {
        width: 100%;
        transform: none !important;
        max-width: 400px !important;
        margin: 0 auto !important;
    }
    
    .form-group {
        position: relative;
        margin-bottom: 2.5rem;
    }
    
    .form-group input,
    .form-group textarea {
        width: 100%;
        background: transparent;
        border: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        padding: 1.2rem 0 0.8rem;
        color: var(--color-text);
        font-size: 1rem;
        font-family: var(--font-body);
    }
    
    .form-group textarea {
        min-height: 120px;
        resize: vertical;
    }
    
    .form-group label {
        position: absolute;
        top: 0;
        left: 0;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        pointer-events: none;
        opacity: 0.7;
        transform: translateY(0);
    }
    
    .form-group input:focus ~ label,
    .form-group textarea:focus ~ label,
    .form-group input:valid ~ label,
    .form-group textarea:valid ~ label {
        top: -1.2rem;
        font-size: 0.8rem;
        color: var(--color-accent);
        opacity: 1;
        transform: translateY(0);
    }
    
    .submit-btn {
        background: transparent;
        border: 1px solid var(--color-text);
        color: var(--color-text);
        padding: 0.8rem 1.5rem;
        font-family: var(--font-heading);
        font-size: 0.9rem;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .menu-toggle {
        display: flex !important;
        position: fixed;
        top: max(1rem, env(safe-area-inset-top, 1rem));
        right: 1rem;
        width: 50px;
        height: 50px;
        background: rgba(15, 15, 15, 0.9);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        cursor: pointer;
        z-index: 1000;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        pointer-events: auto;
        -webkit-tap-highlight-color: transparent;
    }

    .menu-toggle:hover,
    .menu-toggle:active,
    .menu-toggle.active {
        background: rgba(100, 255, 218, 0.1);
        border-color: var(--color-accent);
    }

    .main-nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        height: calc(var(--vh, 1vh) * 100);
        background: rgba(15, 15, 15, 0.98);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        z-index: 999;
        opacity: 0;
        visibility: hidden;
        transition: all 0.5s ease;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: env(safe-area-inset-top, 0) env(safe-area-inset-right, 0) env(safe-area-inset-bottom, 0) env(safe-area-inset-left, 0);
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
        will-change: opacity, visibility;
    }

    .main-nav.active {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
    }
    
    .nav-wrapper {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 4rem 2rem;
    }

    .nav-links {
        list-style: none;
        padding: 0;
        margin: 0;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        pointer-events: auto;
    }

    .nav-item {
        margin: 0;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.5s ease;
        pointer-events: auto;
    }

    .main-nav.active .nav-item {
        opacity: 1;
        transform: translateY(0);
    }

    .scroll-indicator {
        bottom: max(8rem, calc(env(safe-area-inset-bottom, 0) + 8rem));
        z-index: 3;
    }
}





